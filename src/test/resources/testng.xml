<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="UI suite" parallel="tests" thread-count="3">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    <test name="Cart">
        <classes>
            <class name="automation_exercise.tests.cart.AddToCartProductTest"/>
            <class name="automation_exercise.tests.cart.DeleteProductFromCartTest"/>
            <class name="automation_exercise.tests.cart.ProductQuantityInCurtTest"/>
        </classes>
    </test>

    <test name="Login / Register">
        <classes>
            <class name="automation_exercise.tests.login.LoginLogoutTest"/>
            <class name="automation_exercise.tests.login.RegistrationTest"/>
        </classes>
    </test>

    <test name="Products">
        <classes>
            <class name="automation_exercise.tests.products.PlaceOrderTest"/>
            <class name="automation_exercise.tests.products.ProductsDetailsTest"/>
            <class name="automation_exercise.tests.products.SearchProductTest"/>
        </classes>
    </test>
</suite>